{
    "manifest_version": 2,
    "name": "Button Clicker",
    "description": "This extension clicks a button with a certain class on the page.",
    "version": "1.0",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  